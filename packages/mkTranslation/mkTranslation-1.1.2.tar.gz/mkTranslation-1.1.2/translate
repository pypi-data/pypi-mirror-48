#!/usr/bin/env python
# -*- coding: utf-8 -*-
import argparse
import sys
from mkTranslation.translator import mkTranslation

def main():
    parser = argparse.ArgumentParser(description='Command line tools translated using Google and i18ns.com')
    # parser.add_argument('-h','--help',action='restore_true',dest='help', help='help')
    parser.add_argument('-p','--path',action='store',dest='file_path', help='The path of the file to be translated. (Default: ./)')
    parser.add_argument('-d','--dest',action='store',dest='dest_language',default='en',help='The destination language you want to translate. (Default: en)')
    parser.add_argument('-l','--language',action='store',dest='current_language',help='Set the original file language, first use i18ns.com translation')
    args = parser.parse_args()
    mkTranslation().translate_doc(filepath=args.file_path, destination=args.dest_language,language=args.current_language)

if __name__ == '__main__':
    main()

