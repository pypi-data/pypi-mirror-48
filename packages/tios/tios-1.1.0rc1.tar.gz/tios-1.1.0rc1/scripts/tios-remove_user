#!/usr/bin/env python
from __future__ import print_function
import sys
import argparse

try:
    from tios import admin
except RuntimeError as e:
    print('Error: ', e[0])
    exit(1)

parser = argparse.ArgumentParser(description='remove a user account from the tios database')
parser.add_argument('username', help='username to remove')
args = parser.parse_args()
admin.remove_user(args.username)
