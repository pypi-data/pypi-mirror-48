#!/usr/bin/env python
'''
Stop a tios simulation.
'''
from tios import communication
from tios._version import __version__
import argparse


parser  = argparse.ArgumentParser(description='Stop a *tios* simulation')
parser.add_argument("id", help='tios id of the job')
parser.add_argument('-V', '--version', action='version', version=__version__)
args = parser.parse_args()

te = communication.TiosAgent(args.id)
te.message = {'header' : 'STOP'}
try:
    te.sync()
except IOError as e:
    print(e.args[0])
    exit(1)
